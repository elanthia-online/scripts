    sleep 3 unless list[0][fi] =~ /^(infomon|waggle|x?narost)\.lic$/i
    if list[0][fi] =~ /^(infomon|waggle|x?narost)\.lic$/i
      echo "#{list[0][fi]} no longer updatable via ;repository."
      case list[0][fi]
      when /infomon/
