              GameObj.npcs.each { |npc| npc_ids << npc.id if !(npc_ids.include? npc.id) && (npc_bosses.include? npc.noun) }
              pause 2
              next # if UserVars.treim[:attack_type] !~ /410|909|709|512|sleep/
              # until attack_routine(""); end
