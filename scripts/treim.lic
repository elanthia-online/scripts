class CappedCollection
  MAX_SIZE = 200
  attr_accessor :list, :max_size

  def initialize(max_size = MAX_SIZE)
    @list = []
    @max_size = max_size
  end

  def <<(id)
    @list << id
    while @list.size > @max_size
      @list.shift
    end
  end

  def include?(id)
    @list.include?(id)
  end
end

