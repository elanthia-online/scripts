elsif script.vars[1].downcase =~ /^(?:use[_\-])?power$/
	if script.vars[2].downcase == 'on'
		CharSettings['use_power'] = true
		echo "sigil of power will be used"
	elsif script.vars[2].downcase == 'off'
		CharSettings['use_power'] = false
