elsif script.vars[1].downcase =~ /^(?:use[_\-])?wracking$/
	if script.vars[2].downcase == 'on'
		CharSettings['use_wracking'] = true
		echo "sign of wracking will be used"
	elsif script.vars[2].downcase == 'off'
