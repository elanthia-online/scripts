elsif script.vars[1].downcase =~ /^(?:use[_\-])?concentration$/
	if script.vars[2].downcase == 'on'
		CharSettings['use_concentration'] = true
		echo "sigil of concentration will be used"
	elsif script.vars[2].downcase == 'off'
