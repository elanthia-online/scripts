	end
	exit
else
	if script.vars[1].downcase == 'info'
		list_mode = true
		target_list = script.vars[2..-1]
		target_list = [ Char.name ] if target_list.empty?
	else
		target_list = script.vars[1..-1]
		target_list = [ Char.name ] if target_list.empty?
