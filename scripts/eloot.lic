    unless can
      can = ["crate", "barrel", "wastebarrel", "wastebasket", "casket", "canister"]
    end
     
    trash = (GameObj.room_desc.to_a + GameObj.loot.to_a).find_all { |obj| (obj.name =~ Regexp.union(can) && obj.name !~ /\w+'s #{obj.noun}$/) && obj.type !~ /box/}.last 
       
