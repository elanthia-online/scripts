# SLoot is a looter for Gemstone that focuses on performance
module SLoot
  @@data ||= nil
  @sacks_to_close = []

  def self.load(settings)
    @@data = Data.new(settings)
  end

  def self.data
    @@data
  end

  def self.debug(msg)
    echo ">> #{msg}" if SLoot.data.settings[:debug]
  end

  def self.info(msg)
    echo "-- #{msg}"
  end

  def self.error(msg)
    echo "** #{msg}"
    exit
