  def self.loot
    if Spell['Berserk'].active?
      SLoot.info('Your current status prevents you from looting.')
      return
    end

    # Demandred change - always go to defensive if set to go defensive!
    SLoot.change_stance('defensive') if SLoot.data.settings[:loot_defensive]

    Loot.skin if data.settings[:skin_enable]
    Loot.search
    Loot.room
    #SLoot.fill_hands
  end

  def self.help
    print_line = proc do |option, msg, eg = '', pad = 2|
      msg = format("%-40s #{$lich_char}sloot #{eg}", msg) if eg != ''

      respond(format('  %<pad>s%<option>-25s %<msg>s', {
        pad: ' ' * pad,
        option: option,
        msg: msg
      }))
    end

    respond('SLoot by SpiffyJr, maintained by Elanthia-Online')
    respond('')
    respond('SLoot is a looter script designed to make looting as fast and easy as possible.')
    respond('')
    respond("Basic usage: #{$lich_char}sloot")
    respond('')
    respond('Extra commands:')
    print_line.call('help', 'show this help message')
    print_line.call('left|right', 'loot your left/right hand')
    print_line.call('list', 'list current settings')
    print_line.call('sell', 'sells your default loot sack')
    print_line.call('stats', 'displays your loot statistics')
    print_line.call('update', 'reload after updating from repository')
    respond('')
  end

  def self.go2(place)
    fput('unhide') if ( hidden? || invisible? )

    # If we're going to a place we do it based on the sell_fwi settings
    if place.class == String && SLoot.data.settings[:sell_fwi]
      fwi_place = Room.list.find { |room| room.tags.include?(place) && SLoot.fwi?(room) }

      place = fwi_place.id if fwi_place
    end

    return if Room.current.id == place || Room.current.tags.include?(place)

    if Room.current.id.nil?
      if SLoot.data.settings[:debug]
        SLoot.info("unknown room location: hope you know what you're doing")
      else
        SLoot.error('unknown room location')
      end
    end
    Script.run('go2', "#{place} --disable-confirm", { quiet: true })
  end

  def self.withdraw_silver(amount)
    return if amount <= 0

    SLoot.go2('bank')

    # TODO: handle not enough silver case
    fput("withdraw #{amount} silvers")
  end

	def self.check_silver
		silvers = nil
		started = false
		silver_end = nil
		# Let's stir it up and get notes and stuff, too, using wealth quiet.
		action = proc do |server_string|
			if server_string =~ /You have (no silver|but one|[,0-9]+) coins? with you\./
				started = true
				if $1 == "no silver"
					silvers = 0
				elsif $1 == "but one"
					silvers = 1
				else
					silvers = $1.delete(",").to_i
				end
				nil
			elsif server_string =~ /You are carrying .+ valued at a total of ([,\d]+) silver\./
				nil
			elsif server_string =~/You are carrying .+ between notes and coins\./
				nil
			elsif server_string =~ /<prompt time=/ && started == true
				DownstreamHook.remove('sloot_check_silvers')
				nil
			else
				server_string
			end
		end

		DownstreamHook.add('sloot_check_silvers', action)
		$_SERVER_.puts "#{$cmd_prefix}wealth quiet\n"
		wait_until { silvers }
		silvers
	end

  def self.fill_hands
    SLoot.data.stored = [] unless GameObj.left_hand.id.nil? || GameObj.right_hand.id.nil?

    return if SLoot.data.stored.empty?

    SLoot.data.stored.each do |obj|
      if (rdy = SLoot.data.ready_list.find { |_, name| name.include?(obj.name) })
        fput("ready #{rdy[0]}")
      else
        fput("get ##{rdy[0]}")
      end
    end

    SLoot.data.stored = []
  end

  def self.free_hands
    SLoot.free_hand('right')
    SLoot.free_hand('left')
  end

  def self.free_hand(hand = 'right')
    obj = hand == 'right' ? GameObj.right_hand : GameObj.left_hand

    return if obj.id.nil? || GameObj.left_hand.id.nil?

    add_it = proc do |to_store|
      next if SLoot.data.stored.any? { |_, o| o.id == to_store.id }

      SLoot.data.stored.push(to_store).uniq!
    end

    did_it = proc do
      next true if hand == 'right' && GameObj.right_hand.id.nil?
      next true if hand == 'left' && GameObj.left_hand.id.nil?

      next false
    end

    done = false

    ["store #{hand}", "stow #{hand}"].each do |cmd|
      waitrt?
      put(cmd)

      30.times do
        line = get?
        break if line =~ /Could not figure out/

        if line =~ /...wait/
          waitrt?
          put(cmd)
          next
        end

        if did_it.call
          done = true
          add_it.call(obj)
          break
        end

        sleep(0.10)
      end

      break if done
    end
  end

  def self.find_boxes
    SLoot.wait_for_disk
    disk_contents = SLoot.data.disk ? SLoot.data.disk.contents.to_a : []

    (SLoot.find_sack('box').contents.to_a + disk_contents).find_all { |obj| obj.type =~ /box/ }
  end

  def self.phase_box(box)
    return box unless SLoot.data.settings[:loot_phase] && Spell[704].known? && box.name !~ /enruned|mithril/i

    #SLoot.free_hand
		if !checkright.nil? && !checkleft.nil?
			empty_hand
		end

    SLoot.drag(box, 'hand') unless [GameObj.left_hand.id, GameObj.right_hand.id].include?(box.id)
    waitcastrt?

    dothistimeout('prep 704', 3, /Your spell is ready/)
    phase_match = /appears lighter|somewhat insubstantial|flickers in and out|resists the effects/
    res = dothistimeout("cast ##{box.id}", 3, phase_match)

    # once phased they get a new id so refresh the object
    return box unless res =~ /appears lighter/

    GameObj.left_hand.type =~ /box/i ? GameObj.left_hand : GameObj.right_hand
  end

  def self.unphase_box(box)
    return box unless box.type == 'box' && box.name =~ /shifting/i

    res = dothistimeout("drop ##{box.id}", 3, /flickers in and out of existence/)
    return box unless res =~ /flickers in and out of existence/

    GameObj.left_hand.type =~ /box/i ? GameObj.left_hand : GameObj.right_hand
  end

  # Global data used by SLoot
  class Data
    attr_accessor :disk, :disk_full, :stored, :ready_list, :sacks, :settings, :skinners, :skinsheath

    def initialize(settings)
      @disk = nil
      @disk_full = false
      @ready_list = {}
      @sacks = {}
      @settings = settings
      @skinners = {}
      @skinsheath = nil
      @stored = []

      waitrt?
      res = dothistimeout('ready list', 3, /Your current settings are/)
      SLoot.error('failed to check READY list; restart me') if res !~ /Your current settings/

      res = dothistimeout('stow list', 3, /You have the following/)
			sleep 0.2
      SLoot.error('failed to check STOW list; restart me') if res !~ /You have the following/

      ready_list_match = /
        (?:shield|weapon):\s+
        <d\scmd="store\s(\w+)\sclear">[^<]+<a\sexist="\d+"\snoun="[^"]+">([^<]+)<\/a>(?:\s[^<]+)?<\/d>
      /x

      $_SERVERBUFFER_.reverse[0..50].each do |line|
        if line =~ ready_list_match
          @ready_list[Regexp.last_match(1).to_s.downcase] = Regexp.last_match(2).to_s.downcase
          nil
        elsif line =~ /<a exist="([^"]+)" noun="[^"]+">[^(]+\(([a-z]+)\)/
          @sacks[Regexp.last_match(2)] = GameObj.inv.find { |i| i.id == Regexp.last_match(1) }
          @sacks.delete(Regexp.last_match(2)) unless @sacks[Regexp.last_match(2)]
        end
      end

      SLoot.error('Set stow container using STOW SET before using this script') if @sacks['default'].nil?

      SLoot.info('checking for existence of disk')
      15.times do
        break if (@disk = GameObj.loot.find { |l| l.name =~ /#{Char.name} disk$/ })

        sleep(0.1)
      end

      @disk ? SLoot.info('disk found') : SLoot.info('no disk found')

      SLoot.debug("ready list: #{@ready_list.inspect}")
      SLoot.debug("sacks: #{@sacks.inspect}")

      DownstreamHook.add('sloot-disk', proc do |line|
        next line if @disk

				if line =~ %r{Your <a exist="(\d+)" noun="disk">disk</a> arrives, following you dutifully.}
          @disk_full = false if @disk.nil
          @disk = GameObj.loot.find { |obj| obj.id == Regexp.last_match(1).to_s }
        end

        line
      end)
    end
  end

