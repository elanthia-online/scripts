			cols2 = SLoot.find_sack('collectible').contents.find_all { |l| l.type =~ /collectible/ }
			if !cols1.empty?
				if !cols2.empty?
					cols = cols1 + cols2
				else
					cols = cols1
				end
			else
				if !cols2.empty?
					cols = cols2
				end
			end

			return if cols.empty?

      SLoot.go2('collectibles')

      cols.each do |c|
        SLoot.drag(c, 'hand')
        dothistimeout("deposit ##{c.id}", 3, /You hand your/)
      end
    end

    def self.stow_notes
			SLoot.drag(GameObj.right_hand, 'default') if GameObj.right_hand.noun =~ /(?:note|scrip|chit)$/
			SLoot.drag(GameObj.left_hand, 'default') if GameObj.left_hand.noun =~ /(?:note|scrip|chit)$/
    end

    def self.sell
      fput('unhide') if ( hidden? || invisible? )
			sell_ignore = []

      #SLoot.free_hands
			empty_hands

      # check for bounties
      Sell.bounty_tasks

      boxes = SLoot.find_boxes

      if SLoot.data.settings[:sell_locksmith_pool] && boxes.length.positive?
        Sell.locksmith_pool(boxes)

        # refresh the boxes
        boxes = SLoot.find_boxes
      end

      Sell.locksmith(boxes) if SLoot.data.settings[:sell_locksmith] && boxes.length.positive?
      Sell.collectibles if SLoot.data.settings[:sell_collectibles]
			Sell.gold_rings if SLoot.data.settings[:sell_gold_rings]

      lootsack = SLoot.find_sack('default')
      get_loot = proc do |location|
				lootsack.contents.find_all { |obj| obj.sellable =~ /#{location}/i }.reject do |obj|
					sell_ignore.index(obj.id) ||
            (SLoot.data.settings[:sell_exclude].length.positive? && obj.name =~ /#{SLoot.data.settings[:sell_exclude].join('|')}/) ||
            SLoot.data.settings[:sell_loot_types].none? { |loot_type| obj.type =~ /#{loot_type}/ }
        end
      end

      # do the primary selling at each place
      %w[furrier gemshop consignment pawnshop].each do |location|
        loot = get_loot.call(location)

        next if loot.empty?

        SLoot.go2(location)

				if ( (location =~ /furrier/ && (SLoot.data.settings[:sell_loot_types].include?('skin'))) || (location =~ /gemshop/ && (SLoot.data.settings[:sell_loot_types].include?('gem'))) )  && (lootsack.contents.find_all { |obj| obj.name =~ /#{SLoot.data.settings[:sell_exclude].join('|')}/ }).empty? # Demandred fix selling jewelry at gemshop instead of pawnshop
          SLoot.drag(lootsack, 'hand') if [checkleft, checkright].index(lootsack.noun).nil?
          dothistimeout("sell ##{lootsack.id}", 3, /inspects the contents carefully/)
          SLoot.drag(lootsack, 'wear') unless [checkleft, checkright].index(lootsack.noun).nil?
          Sell.stow_notes

          loot = get_loot.call(location)

          next if loot.empty?
        end

        # sanitycheck
        SLoot.drag(lootsack, 'wear') unless [checkleft, checkright].index(lootsack.noun).nil?

        # individual items time (appraisals)
        loot.each do |obj|
					if sell_ignore.include?(obj.id)
						echo "ignore included the id of something"
						next
					end
          if obj.type =~ /scroll/ && SLoot.data.settings[:sell_keep_scrolls].length.positive?
						res = dothistimeout "read ##{obj.id}", 3, /On the/
						if res.nil?
							sell_ignore.push(obj.id)
              next
            end

            spell_list = []
            $_SERVERBUFFER_.reverse[0..25].each do |line|
              if line =~ /noun="([0-9]+)"/
                spell_list.push(Regexp.last_match(1).to_s)
              elsif line =~ /On the <a exist="[^"]+"/
                break
              end
            end

            if (SLoot.data.settings[:sell_keep_scrolls] & spell_list).length.positive?
							sell_ignore.push(obj.id)
              next
            end
          end

          SLoot.drag(obj, 'hand')

          if obj.type =~ /#{SLoot.data.settings[:sell_appraise_types].join('|')}/
            # rubocop:disable Layout/LineLength
						appraise_match = /[,0-9,]+ (?:silver|Not my line, really|for it if you want to sell|for this if you'd like)|not buying anything this valuable today|not quite my field|only deal in gems and jewelry|There is nothing of value to me|Trying to pull a fast one on old Hortemeyer, are you\?|Can't say I'm interested|That's basically worthless here|no use for that/
            denied = /Not my line, really|not quite my field|only deal in gems and jewelry|There is nothing of value to me|Trying to pull a fast one on old Hortemeyer, are you\?|no use for that/
						accepted = /([,0-9]+) (?:silver|for it if you want to sell|for this if you'd like)/
            # rubocop:enable Layout/LineLength

						res = dothistimeout "appraise ##{obj.id}", 3, appraise_match

            value = 99_999_999
            case location
            when 'gemshop'
              value = SLoot.data.settings[:sell_appraise_gemshop]
            when 'pawnshop'
              value = SLoot.data.settings[:sell_appraise_pawnshop]
            else
              SLoot.info("appraise setting not available for #{location}; report this to Elanthia-Online")
            end

						# Demandred - trying to fix selling stuff that is over the appraise limit
						#matched = Regexp.last_match(1).delete(',').to_i
						if res =~ /([,0-9]+) (?:silver|for it if you want to sell|for this if you'd like)/
							matched = $1.delete(",").to_i
							echo "price match is #{matched}"
						end

						# Adding too valuable to sell jewelry to ignore because some of it will be attempted to be sold at the pawnshop and could cause issues...
						if res.nil? || (res =~ denied) || (res =~ accepted && matched >= value) || res =~ /not buying anything this valuable today/
							SLoot.debug('unknown response from appraisal!') if res.nil?

							sell_ignore.push(obj.id)
							SLoot.drag(obj, 'default')
							echo sell_ignore
							next
						end
					end

          # rubocop:disable Layout/LineLength
					sell_match = /(?:pays|hands) you [,0-9]+ silver|not quite my field|only deal in gems and jewelry|no use for that|Where do you find this junk|That's basically worthless here|I don't have that much spare silver, I will have to give you a bank note for it|I'm afraid I don't have that much silver on hand.+so I'll have to give you a .+ for it./ # Demandred - fix timeout issue missing match
						# rubocop:enable Layout/LineLength
						res = dothistimeout("sell ##{obj.id}", 3, sell_match)
						sell_ignore.push(obj.id) if res =~ /no use for that|That's basically worthless here/
	
						Sell.stow_notes

          SLoot.drag(obj, 'default') if (GameObj.right_hand.id == obj.id) || (GameObj.left_hand.id == obj.id)

          # assume disk is no longer full
          @disk_full = false
        end
      end

      ending_silver = SLoot.check_silver
      keep_silvers = SLoot.data.settings[:sell_keep_silvers].to_i

      return unless ending_silver && (keep_silvers.zero? || (ending_silver != keep_silvers))

      SLoot.go2('bank')
      fput('share all') if SLoot.data.settings[:sell_share_silvers] && ending_silver > 1
      fput('deposit all')
      fput("withdraw #{keep_silvers}") if keep_silvers.positive?
    end
  end
end

# Initialize default settings
SLoot.load(CharSettings.to_hash) unless SLoot.data

if script.vars[1].nil?
  SLoot.loot
  exit
end

# This allows partial matches the same way Gemstone works.
# e.g., ;sloot sel would match ;sloot sell
command = '^box^help^load^setup^sell^list'

# No match - show help message
unless (index = (command =~ /\^#{script.vars[1]}/))
  SLoot.help
  exit
end

# Got a match, strip the command down to the parts in between the ^
start = index + 1
stop = command.index('^', index + 1) - 1

case command[start..stop]
when 'box'
  SLoot::Loot.box(GameObj.right_hand)
when 'help'
  SLoot.help
when 'list'
	SLoot::Setup.new(SLoot.data.settings).list
when 'load'
	SLoot.load(CharSettings.to_hash)
when 'sell'
	room = Room.current.id
	SLoot.sell
	SLoot.go2(room)
	fill_hands
when 'setup'
	SLoot::Setup.new(SLoot.data.settings).start
	Settings.save
end