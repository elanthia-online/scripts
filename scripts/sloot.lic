  def self.room_meta(key)
    key = "meta:#{key}"
    tag = Room.current.tags.find { |t| t =~ /#{key}/ }
    return Regexp.last_match(1).to_s if tag =~ /^#{key}:(.*)$/

    nil
  end

  def self.fwi?(room)
    (room.location =~ /Four Winds|Mist Harbor|Western Harbor/)
  end

  def self.wait_for_disk
    return unless SLoot.data.disk

    if SLoot.data.disk.status =~ /gone/ || !GameObj.loot.find { |l| l.name =~ /#{Char.name} disk$/ }
      SLoot.info('waiting for your disk to arrive')
      50.times do
        break if (SLoot.data.disk = GameObj.loot.find { |l| l.name =~ /#{Char.name} disk$/ })

        sleep(0.1)
      end
    end

    return unless SLoot.data.disk && SLoot.data.disk.status !~ /gone/ && SLoot.data.disk.contents.nil?

    res = dothistimeout("look in ##{SLoot.data.disk.id}", 3, /In the|There is nothing|That is closed/)
    return unless res =~ /That is closed/

    fput("open ##{SLoot.data.disk.id}")
    fput("look in ##{SLoot.data.disk.id}")
  end

  def self.change_stance(stance)
    return if Spell['Frenzy'].active? || dead?
    return if checkstance(stance.strip)
    return if stance == 'defensive' && checkstance('guarded')

    while (cur_stance = checkstance) != stance
      res = dothistimeout("stance #{stance}", 2, /You are now|Roundtime|Wait|wait|Your rage causes you/)
      if res =~ /Roundtime: (\d+)|wait (\d+)/i
        sleep((Regexp.last_match(1) || Regexp.last_match(2)).strip.to_f - 1)
      elsif res =~ /Your rage causes you/
        Spell['Frenzy'].putup
        Spell['Frenzy'].timeleft = 30
      elsif cur_stance == 'guarded' && stance == 'defensive'
        break
      end
    end
  end

  def self.drag(from, to)
    SLoot.phase_box(from) if from.class == GameObj && from.type =~ /box/ && to != SLoot.data.disk

    input_to_id = proc do |input|
      next input if %w[drop wear].include?(input)
      next "##{input.id}" if input.class == GameObj
      next GameObj.right_hand.id.nil? ? 'right' : 'left' if input == 'hand'

      if input.class == String
        next "##{input.to_i}" unless input.to_i.zero?

        sack = find_sack(input)

        if sack.nil?
          SLoot.info("failed to find sack for #{input}")
          sack = find_sack('default')
        end

        next "##{sack.id}"
      end

      SLoot.error("invalid param #{input.inspect} passed to drag")
    end

    SLoot.debug("dragging #{from.inspect} to #{to.inspect}")

    to_id = input_to_id.call(to)
    from_id = input_to_id.call(from)

    if to_id.nil? || from_id.nil?
      SLoot.info("there was an issue dragging #{from_id} to #{to_id}")
      return
    end

    SLoot.debug("#{from_id.inspect} to #{to_id.inspect}")

    # Demandred - let's try changing this to dothistimeout - included aelotoi wings thing
    #fput("_drag #{from_id} #{to_id}")
    dothistimeout "_drag #{from_id} #{to_id}", 5, /^You|^Spreading your wings/

    lines = reget.reverse[0..5]

    # was it closed?
    if lines.any? { |l| l =~ /It's closed/i }
      @sacks_to_close.push(to_id)
      fput("open #{to_id}")
      drag(from, to)
    elsif lines.any? { |l| l =~ /There appears to be an/i }
      SLoot.info('Possibly an item you want to keep')
      SLoot.info('Sleeping for 10 seconds: ;kill the script to hold onto it')
      sleep(10)
      drag(from, to)
    elsif lines.any? { |l| l =~ /won't fit in the/ && l !~ /#{XMLData.name} (?:disk|coffin)/ }
      SLoot.info('Your container is full. Dropping this item.')
      SLoot.info('Sleeping for 3 seconds: ;kill the script to handle yourself')
      sleep(3)
      fput("drop #{from_id}")
    end
  end

  def self.find_skinner(type)
    case type
    when :normal
      weapon_name = SLoot.data.settings[:skin_weapon]
    when :blunt
      weapon_name = SLoot.data.settings[:skin_weapon_blunt]
    end

    return nil if weapon_name.empty?
    return SLoot.data.skinners[type] if SLoot.data.skinners[type]

    unless SLoot.data.skinsheath
      unless SLoot.data.settings[:skin_sheath].empty?
        SLoot.data.skinsheath = GameObj.inv.find do |i|
          i.name =~ /\b#{SLoot.data.settings[:skin_sheath]}\b/ ||
          i.noun =~ /\b#{SLoot.data.settings[:skin_sheath]}\b/
        end
      end

      SLoot.data.skinsheath ||= find_sack('default')
    end

    dothistimeout("look in ##{SLoot.data.skinsheath.id}", 3, /In the/) unless SLoot.data.skinsheath.contents

    items = SLoot.data.skinsheath.contents.clone
    items.push(GameObj.right_hand)
    items.push(GameObj.left_hand)

    weapon = items.find do |c|
      next if c.nil? || c.id.nil?

      c.name =~ /#{weapon_name}/i || c.noun =~ /\b#{weapon_name}\b/i
    end

    unless weapon
      SLoot.info("failed to find skinner: #{weapon_name} in #{SLoot.data.skinsheath}")
      return nil
    end

    SLoot.data.skinners[type] = weapon
    SLoot.data.skinners[type]
  end

  def self.find_sack(type = 'default')
    type = 'default' unless SLoot.data.sacks[type]

    res = dothistimeout("look in ##{SLoot.data.sacks[type].id}", 3, /In the|There is nothing|That is closed/) unless SLoot.data.sacks[type].contents
    # Demandred - let's add a case if the container is closed...not sure why it wasn't here. Also added There is nothing - again, not sure why not here...
    if res =~ /That is closed/
      dothistimeout("open ##{SLoot.data.sack[type].id}", 3, /^You /)
      dothistimeout("look in ##{SLoot.data.sacks[type].id}", 3, /In the|There is nothing/)
    end
    # Demandred - end case of closed container - Regex for opening may need additions in the case of weird containers that don't start the line with "You ..."

    SLoot.data.sacks[type]
  end

